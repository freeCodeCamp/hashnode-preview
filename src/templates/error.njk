{% extends 'default.njk' %}

{% block content %}
  <main id="site-main" class="post-template site-main outer">
    <article class="post-full post">
      <section class="post-full-content">
        <div style="text-align: center; height: 60vh; display: flex; flex-direction: column;">
          <h2>Oops, something is not right!</h2>
          <p>Please verify the URL in your browser's address bar. If the problem continues, <a href="https://freecodecamp.org/support">contact freeCodeCamp support</a> for assistance.</p>
          <p>
            <strong>Error: {{ error }}</strong>
          </p>
        </div>
      </section>
    </article>
  </main>
{% endblock %}
